@model Actor


<div class="card text-center">
    <div class="card-header">
        <h2 class="bg bg-danger" style="color:white">Are You Sure You Want To Delete @Model.FullName Actor ...?</h2>
    </div>
    <div class="card-body">
        <img src="~/Files/ActorImages/@Model.ImageName" width="200" height="200" />
    </div>
</div>
<hr />
<br />
<br />


<form method="post" asp-action="ConfirmDelete" asp-route-id="@Model.ID">
    <div class="form-group">
        <label asp-for="FirstName"></label>
        <input class="form-control" asp-for="FirstName" disabled>
        <span class="bg bg-danger" style="color:white" asp-validation-for="FirstName"></span>
    </div>
    <br />

    <div class="form-group">
        <label asp-for="LastName"></label>
        <input class="form-control" asp-for="LastName" disabled>
    </div>
    <br />

    <div class="form-group">
        <input class="form-control" asp-for="ImageName" hidden>
    </div>
    <br />

    <button type="submit" class="btn btn-danger form-control">Delete</button>
</form>